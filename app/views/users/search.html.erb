<%= form_tag(search_path method: :get) do %>
  <%= text_field_tag "search" %>
  <%= button_tag "Search", :class=> "btn btn-success" %>
<% end %>


<table class='table'>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>